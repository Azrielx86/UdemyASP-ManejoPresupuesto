@model RegistroViewModel

@{
    ViewData["Title"] = "Register";
}
<h1>Registro</h1>

<div class="card">
    <div class="card-body">
        <form asp-action="Registro">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input type="email" id="email" class="form-control" asp-for="Email"/>
                <label for="email">Email Address</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input type="password" id="password" class="form-control" asp-for="Password"/>
                <label for="password">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button class="btn btn-primary" type="submit">Registrars</button>
            <a class="btn btn-success" asp-action="Login">Iniciar sesión</a>
        </form>
    </div>
</div>


@section scripts{
    <partial name="_ValidationScriptsPartial"/>
}
@model CuentasCreacionViewModel

@{
    ViewData["Title"] = "Editar cuenta";
}

<h1>
    Editar cuenta: @Model.Nombre
</h1>

<form asp-action="Edit">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id"/>
    <div class="mb-3">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="Nombre" placeholder="Nombre" name="Nombre" asp-for="Nombre"/>
            <label asp-for="Nombre">Nombre</label>
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <select class="form-select" asp-for="TipoCuentaId" asp-items="Model.TiposCuenta"></select>
            <label asp-for="TipoCuentaId" class="form-label"></label>
            <span asp-validation-for="TipoCuentaId" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input class="form-control" id="Balance" placeholder="Balance" name="Balance" asp-for="Balance" />
            <label asp-for="Balance">Balance</label>
            <span asp-validation-for="Balance" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <textarea asp-for="Descripcion" class="form-control" placeholder="Descripcion" name="Descripcion"></textarea>
            <label asp-for="Descripcion">Descripcion</label>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
    </div>

    <button class="btn btn-primary" type="submit">Enviar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts{
        <partial name="_ValidationScriptsPartial"/>
}
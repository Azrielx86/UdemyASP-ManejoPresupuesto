@model TipoCuenta

@{
    ViewData["Title"] = "Crear cuenta";
}

<h1>Crear tipo cuenta</h1>
<h5>
    El tipo de cuenta se refiere a cómo podemos agrupar cuentas.
    Ejemplos: Préstamos, tarjetas de crédito, etc.
</h5>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-controller="TiposCuentas" asp-action="Crear">
    <div class="mb-3">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="Nombre" placeholder="Nombre" name="Nombre" asp-for="Nombre">
            <label asp-for="Nombre">Nombre</label>
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
    </div>

    <button class="btn btn-primary">Enviar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}